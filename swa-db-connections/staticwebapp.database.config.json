{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
        "database-type": "mysql",
        "connection-string": "@env('DATABASE_CONNECTION_STRING')"
    },
    "runtime": {
        "rest": {
            "enabled": true,
            "path": "/rest",
            "request-body-strict": true
        },
        "host": {
            "cors": {
                "origins": ["http://localhost:4280"],
                "allow-credentials": false
            },
            "authentication": {
                "provider": "StaticWebApps"
            },
            "mode": "production"
        }
    },
    "entities": {
        "Person": {
            "source": "MyTestPersonTable",
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "circuits": {
            "source": {
                "object": "circuit",
                "type": "table",
                "key-fields": ["id"]
            },
            "rest": {
                "enabled": true,
                "path": "/circuits",
                "methods": ["get"]
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["read"]
                }
            ]
        },
        "constructors": {
            "source": {
                "object": "constructor",
                "type": "table",
                "key-fields": ["id"]
            },
            "rest": {
                "enabled": true,
                "path": "/constructors",
                "methods": ["get"]
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["read"]
                }
            ]
        },

        "driver-of-day": {
            "source": {
                "object": "last-race-driver-day",
                "type": "view",
                "key-fields": ["race_id"]
            },
            "graphql": {
                "enabled": true,
                "type": {
                    "singular": "driver-of-day",
                    "plural": "driver-of-days"
                }
            },
            "rest": {
                "enabled": true,
                "path": "/driver-of-day",
                "methods": ["get"]
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["read"]
                }
            ]
        },

        "driver": {
            "source": {
                "object": "driver-get",
                "parameters": {
                    "abbreviation": "string",
                    "id": "string"
                },
                "type": "view",
                "key-fields": ["id"]
            },
            "rest": {
                "enabled": true,
                "path": "/driver",
                "methods": ["get"]
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["read"]
                }
            ]
        },

        "drivers": {
            "source": {
                "key-fields": ["id"],
                "object": "driver",
                "parameters": {
                    "abbreviation": "string",
                    "id": "string"
                },
                "type": "table"
            },
            "rest": {
                "enabled": true,
                "path": "/drivers",
                "methods": ["get"]
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["read"]
                }
            ]
        },

        "race-result": {
            "source": {
                "object": "race_result",
                "parameters": {
                    "race_id": 1127,
                    "driver_id": "string"
                },
                "type": "view",
                "key-fields": ["race_id", "driver_id"]
            },
            "rest": {
                "enabled": true,
                "path": "/race-result",
                "methods": ["get"]
            },
            "permissions": [
                {
                    "role": "anonymous",
                    "actions": ["read"]
                }
            ]
        }
    }
}
